.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 100rpx;
  color: #333333;
}

.display {
  width: 100%;
  height: 650rpx;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.spu-title {
  margin-bottom: 8rpx;
}

.description {
  font-size: 28rpx;
  color: #adadad;
  margin-bottom: 8rpx;
}

.title {
  padding: 15rpx 25rpx;
  font-size: 28rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.param {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.evaluation {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.introduce {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.introduce-img {
  display: flex;
  width: 100%;
}

.tabbar {
  position: fixed;
  bottom: 0;
}
